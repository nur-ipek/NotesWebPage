@using Notes.BusinessLogicLayer
@using Notes.Entities
@{ 
    CategoryManager categoryManager = new CategoryManager();
    List<Category> categories = categoryManager.GetListCategory();
}




<h1 class="my-4">Kategoriler</h1>
<div class="list-group">
    <a href="/Home/Index" title="Tümünü Seç" class="list-group-item">
        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-right-short" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M4 8a.5.5 0 0 1 .5-.5h5.793L8.146 5.354a.5.5 0 1 1 .708-.708l3 3a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708-.708L10.293 8.5H4.5A.5.5 0 0 1 4 8z" />
        </svg>
        Tümünü Seç

    </a>
    @foreach (Category item in categories)
    {
        <a href="/Home/ByCategory/@item.Id" title="@item.Description" class="list-group-item">

            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-right-short" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M4 8a.5.5 0 0 1 .5-.5h5.793L8.146 5.354a.5.5 0 1 1 .708-.708l3 3a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708-.708L10.293 8.5H4.5A.5.5 0 0 1 4 8z" />
            </svg>
    
            @item.Title
            
        </a> //Kategorinin üzerine gelindiğinde title'in içerisine yazılan açıklama çıkıyor.
    }
</div>
